# Haven App Environment Variables
# Copy this file to .env and fill in your actual values

# App Configuration
APP_NAME=Haven
APP_VERSION=1.0.0
COMPANY_NAME=WealthyFi
BUNDLE_ID=com.wealthyfi.haven

# API Configuration
API_BASE_URL=https://api.haven.wealthyfi.com
API_VERSION=v1
API_TIMEOUT=30000
WEBSOCKET_URL=wss://ws.haven.wealthyfi.com

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-here
REFRESH_TOKEN_EXPIRES=7d
ACCESS_TOKEN_EXPIRES=24h

# Fintech Services - India Specific
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
SETU_CLIENT_ID=your_setu_client_id
SETU_CLIENT_SECRET=your_setu_secret
SETU_BASE_URL=https://dg-sandbox.setu.co
UPI_MERCHANT_ID=your_upi_merchant_id
UPI_MERCHANT_KEY=your_upi_merchant_key

# Voice & AI Services
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
SPEECH_TO_TEXT_LANG=hi-IN,en-IN
TEXT_TO_SPEECH_LANG=hi-IN
OPENAI_API_KEY=your_openai_key_optional

# Push Notifications
FCM_SENDER_ID=your_fcm_sender_id
FCM_SERVER_KEY=your_fcm_server_key
APNS_TEAM_ID=your_apple_team_id
APNS_KEY_ID=your_apple_key_id

# Analytics & Monitoring
FIREBASE_CONFIG=your_firebase_config_json
MIXPANEL_TOKEN=your_mixpanel_token
SENTRY_DSN=your_sentry_dsn
CRASHLYTICS_ENABLED=true

# SMS/OTP Services
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
MSG91_API_KEY=your_msg91_key

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug
FLIPPER_ENABLED=true
REACT_NATIVE_DEBUGGER=true

# Feature Flags
VOICE_FEATURE_ENABLED=true
BIOMETRIC_AUTH_ENABLED=true
ACCOUNT_AGGREGATOR_ENABLED=true
GAMIFICATION_ENABLED=true
